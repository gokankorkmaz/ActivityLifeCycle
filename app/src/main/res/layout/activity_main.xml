<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context="com.androidedu.kodluyoruzakademi.activitylifecycle.MainActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="369dp"
        android:layout_height="340dp"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/kodluyoruz_300"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iv"
        android:layout_marginTop="16dp"
        android:paddingLeft="17dp"
        android:text="Activity Yaşam Döngüleri"
        android:textColor="#000000"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="456dp" />
</RelativeLayout>
